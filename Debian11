FROM debian:12-slim
RUN apt-get update && apt-get install -y sudo curl wget net-tools iproute2 systemd openssh-server nano vim htop && echo 'root:gg' | chpasswd && sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config && sed -i 's/#PasswordAuthentication yes/PasswordAuthentication yes/' /etc/ssh/sshd_config && mkdir -p /var/run/sshd && echo -e "\033[1;36m\n  ____  ____  __  __ \n |  _ \|  _ \|  \/  |\n | |_) | | | | |\/| |\n |  _ <| |_| | |  | |\n |_| \_\____/|_|  |_|\n\033[0m" > /etc/motd && echo "Made by RDX" >> /etc/motd && apt-get clean && rm -rf /var/lib/apt/lists/* && EXPOSE 22 && CMD ["/usr/sbin/sshd","-D"]
